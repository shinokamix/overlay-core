{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "overlay-core",
  "version": "0.1.0",
  "identifier": "com.shin.overlay-core",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "overlay-core",
        "width": 800,
        "height": 600,
        "decorations": false,
        "minimizable": false,
        "alwaysOnTop": true,
        "visibleOnAllWorkspaces": true,
        "contentProtected": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM3RjlFQUZBMkZFN0U1QjEKUldTeDVlY3YrdXI1TjVoQWhmcm1nUkszeDdjVXZPMU5xQ2JTN3lvUlJpVkk4ajV6YmR2ZDJmOE0K",
      "endpoints": [
        "https://github.com/shinokamix/overlay-core/releases/latest/download/latest.json"
      ]
    }
  }
}
